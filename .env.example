# Environment Configuration for Nijenhuis Boat Rental Website
# Copy this file to .env and fill in your actual values

# Production/Development Environment
FLASK_ENV=production
DEBUG=False

# Security Keys
SECRET_KEY=your-super-secret-key-here-generate-with-uuid4
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# API Security (optional - if not set, API key auth is disabled)
API_KEY=your-internal-api-key-for-frontend-backend-communication

# CORS Configuration
ALLOWED_ORIGINS=https://nijenhuis-botenverhuur.com,https://www.nijenhuis-botenverhuur.com

# Database Configuration (if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/nijenhuis

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Rate Limiting Configuration
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_MINUTE_API=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline' fonts.googleapis.com
CSP_FONT_SRC='self' fonts.gstatic.com
CSP_IMG_SRC='self' data: https:
CSP_CONNECT_SRC='self' api.perplexity.ai

# Security Headers
FORCE_HTTPS=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Monitoring and Analytics (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X