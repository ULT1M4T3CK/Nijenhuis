{
  "security": {
    "version": "3.0.0",
    "description": "Security configuration for Nijenhuis Chatbot API",
    "last_updated": "2025-01-27",
    
    "authentication": {
      "enabled": true,
      "api_key_required": true,
      "jwt_enabled": true,
      "jwt_expiry_hours": 24,
      "default_permissions": ["chat"],
      "admin_permissions": ["chat", "config", "admin"]
    },
    
    "rate_limiting": {
      "enabled": true,
      "default_requests_per_minute": 60,
      "default_requests_per_hour": 1000,
      "burst_limit": 10,
      "window_size_seconds": 60,
      "cleanup_interval_seconds": 300
    },
    
    "ip_blocking": {
      "enabled": true,
      "max_failed_attempts": 5,
      "block_duration_minutes": 15,
      "auto_unblock": true,
      "whitelist": [
        "127.0.0.1",
        "::1",
        "localhost"
      ],
      "blacklist": []
    },
    
    "cors": {
      "enabled": true,
      "allowed_origins": [
        "https://nijenhuis-botenverhuur.com",
        "http://nijenhuis-botenverhuur.com",
        "http://85.215.195.147",
        "http://localhost:3000",
        "http://localhost:5000",
        "http://localhost:5173",
        "http://127.0.0.1:3000",
        "http://127.0.0.1:5000"
      ],
      "allowed_methods": ["GET", "POST", "OPTIONS"],
      "allowed_headers": [
        "Content-Type",
        "Authorization",
        "X-API-Key",
        "X-Client-Version",
        "X-Request-ID"
      ],
      "supports_credentials": true,
      "max_age": 3600
    },
    
    "connection_monitoring": {
      "enabled": true,
      "health_check_interval_seconds": 30,
      "timeout_seconds": 10,
      "max_retries": 3,
      "reconnect_delay_seconds": 2,
      "exponential_backoff": true,
      "fallback_responses": {
        "enabled": true,
        "languages": ["nl", "en", "de"],
        "default_language": "nl"
      }
    },
    
    "logging": {
      "enabled": true,
      "log_level": "INFO",
      "log_file": "logs/security.log",
      "max_log_size_mb": 10,
      "backup_count": 5,
      "log_security_events": true,
      "log_requests": true,
      "log_errors": true,
      "sensitive_data_masking": true
    },
    
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256-GCM",
      "key_rotation_days": 30,
      "secure_headers": true,
      "https_required": false
    },
    
    "input_validation": {
      "enabled": true,
      "max_message_length": 1000,
      "max_request_size_mb": 16,
      "sanitize_input": true,
      "xss_protection": true,
      "sql_injection_protection": true,
      "allowed_characters": "alphanumeric_punctuation_unicode"
    },
    
    "monitoring": {
      "enabled": true,
      "metrics_collection": true,
      "performance_monitoring": true,
      "error_tracking": true,
      "uptime_monitoring": true,
      "alert_thresholds": {
        "error_rate_percent": 5,
        "response_time_ms": 5000,
        "consecutive_failures": 3
      }
    },
    
    "backup": {
      "enabled": true,
      "backup_interval_hours": 24,
      "retention_days": 30,
      "encrypt_backups": true,
      "backup_locations": [
        "config/backups/",
        "logs/backups/"
      ]
    },
    
    "compliance": {
      "gdpr_compliant": true,
      "data_retention_days": 90,
      "anonymize_logs": true,
      "audit_trail": true,
      "privacy_by_design": true
    }
  },
  
  "development": {
    "debug_mode": false,
    "test_api_keys": [
      "dev_test_key_12345",
      "development_key_67890"
    ],
    "mock_services": false,
    "verbose_logging": false
  },
  
  "production": {
    "debug_mode": false,
    "strict_ssl": true,
    "security_headers": true,
    "rate_limiting_strict": true,
    "monitoring_enhanced": true,
    "backup_automated": true
  }
}
